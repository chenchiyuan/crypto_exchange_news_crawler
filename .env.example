# =============================================================================
# Twitter API 配置
# =============================================================================
# Twitter API 基础 URL (使用 apidance.pro 代理)
TWITTER_API_BASE_URL=https://api.apidance.pro

# Twitter API Key (从 https://apidance.pro 获取)
TWITTER_API_KEY=your_twitter_api_key_here

# Twitter API 限流配置
TWITTER_RATE_LIMIT_PER_MINUTE=50
TWITTER_MAX_RETRY_ATTEMPTS=3
TWITTER_DEFAULT_BATCH_SIZE=500


# =============================================================================
# DeepSeek AI 配置
# =============================================================================
# DeepSeek API Key (从 https://platform.deepseek.com 获取)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# DeepSeek API 基础 URL
DEEPSEEK_BASE_URL=https://api.deepseek.com

# DeepSeek 模型
DEEPSEEK_MODEL=deepseek-chat


# =============================================================================
# AI 分析成本限制
# =============================================================================
# 单次分析最大成本（美元）
MAX_COST_PER_ANALYSIS=10.00

# 成本告警阈值（美元）
COST_ALERT_THRESHOLD=5.00

# AI 分析批次大小（每批推文数量）
AI_ANALYSIS_BATCH_SIZE=100


# =============================================================================
# 告警推送配置（复用 monitor 应用配置）
# =============================================================================
# 慧诚告警推送 Token
ALERT_PUSH_TOKEN=your_alert_push_token_here

# 慧诚告警推送 Channel
ALERT_PUSH_CHANNEL=twitter_analysis
